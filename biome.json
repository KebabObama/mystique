{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "bracketSpacing": true,
    "expand": "never",
    "attributePosition": "auto",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": { "noNamespace": "off" },
      "correctness": { "noUnusedImports": "on", "noUnusedVariables": "on" },
      "recommended": true,
      "suspicious": { "noUnknownAtRules": "off" },
      "performance": { "noNamespaceImport": "off" }
    },
    "domains": { "next": "recommended", "react": "recommended" }
  },
  "assist": {
    "actions": {
      "source": { "organizeImports": "on", "useSortedProperties": "on" }
    }
  }
}
